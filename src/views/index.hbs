<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>{{name}}</title>
      <!-- bower:js -->
      <script src="/lib/jquery/dist/jquery.js"></script>
      <script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
      <!-- endbower -->
      <!-- bower:css -->
      <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.min.css" />
      <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-theme.min.css" />
      <link rel="stylesheet" href="/lib/font-awesome/css/font-awesome.min.css" />
      <!-- endbower -->
      <!-- inject:css -->
      <link rel="stylesheet" href="/css/styles.css">
      <!-- endinject -->
      <!-- inject:js -->
      <script src="/js/app.js"></script>
      <!-- endinject -->
   </head>
   <body>

         <nav class="navbar navbar-default navbar-inverse">
           <div class="container-fluid">
             <!-- Brand and toggle get grouped for better mobile display -->
             <div class="navbar-header">
               <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                 <span class="sr-only">Toggle navigation</span>
                 <span class="icon-bar"></span>
                 <span class="icon-bar"></span>
                 <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="/">{{title}}</a>
             </div>

             <!-- Collect the nav links, forms, and other content for toggling -->
             <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
               <ul class="nav navbar-nav">
                 {{#each nav}}
                     <li><a href="{{this.link}}">{{this.text}}</a></li>
                  {{/each}}
               </ul>
               <ul class="nav navbar-nav navbar-right">
                  <form class="navbar-form navbar-left">
                    <div class="form-group">
                      <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-warning">Submit</button>
                  </form>
                 <li><a href="#">Link</a></li>
                 <li class="dropdown">
                   <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                   <ul class="dropdown-menu">
                     <li><a href="#">Action</a></li>
                     <li><a href="#">Another action</a></li>
                     <li><a href="#">Something else here</a></li>
                     <li role="separator" class="divider"></li>
                     <li><a href="#">Separated link</a></li>
                   </ul>
                 </li>
               </ul>
             </div><!-- /.navbar-collapse -->
           </div><!-- /.container-fluid -->
         </nav>

      <div class="container">
         <div class="page-header">
            <h1>{{name}}</h1>
         </div>

         <div class="row">
            <div class="col-sm-4">
               <h3>Enter a New Subscription</h3>
               <form class="new-sub-form" id="new-sub-form">
                  <div class="form-group">
                     <label for="name">Name:</label>
                     <input class="form-control" type="text" name="name" value="">
                  </div>
                  <div class="form-group">
                     <label for="cost">Cost:</label>
                     <input class="form-control" type="text" name="cost" value="">
                  </div>
                  <div class="form-group">
                     <label for="recur">Recurrence:</label>
                     <input class="form-control" type="text" name="recur" value="">
                  </div>
                  <div class="form-group">
                     <label for="date">Date of Recurrence:</label>
                     <input class="form-control" type="text" name="date" value="">
                  </div>
                  <input class="btn btn-warning " type="button" name="name" value="Create Entry">
               </form>
            </div>
            <div class="col-sm-8" id="subscriptions">
               <h2 class="text-center">Current Subscriptions</h2>
               {{#each subs}}
               <div class="col-sm-6 col-md-4 sub" >
                  <a href="/MySubs/{{_id}}"><div class="sub-inner">
                     <h4 style="text-align: center;"><strong>{{name}}</strong></h4>
                     <div class="row">
                        <div class="col-sm-7 col-lg-8">
                           <strong>Cost:</strong>
                        </div>
                        <div class="col-sm-5 col-lg-4">
                           <span>
                              ${{cost}}
                           </span>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col-sm-7 col-lg-8">
                           <strong>Recurrence:</strong>
                        </div>
                        <div class="col-sm-5 col-lg-4">
                           <span>
                              {{interval}}
                           </span>
                        </div>
                     </div>
                     <div class="row">
                        <div class="col-sm-7 col-lg-8">
                           <strong>Date:</strong>
                        </div>
                        <div class="col-sm-5 col-lg-4">
                           <span>
                              {{date}}
                           </span>
                        </div>
                     </div>
                  </div></a>
               </div>
               {{/each}}
            </div>
         </div>
      </div>

      <nav class="navbar navbar-default navbar-fixed-bottom navbar-inverse">
         <div class="container" style="color:#ccc; padding-top: 15px;">
            mySub - Tyler Lego
         </div>
      </nav>
   </body>
</html>
